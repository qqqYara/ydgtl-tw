//---------------------------------------------------------------------------
  >>> Inner Pages Template :
  ---------------------------------------------------------------------------
doctype html
html(lang="ru" dir="ltr")


    head
        block variables
        include ../template/parts/head

    body.page-inner
        include ../layout/header

        main
            if !noBreadcrumbs
                .breadcrumbs
                    .container
                        ul.breadcrumbs-wrap
                            li.breadcrumbs-item
                                a(href="/") Главная
                            if third
                                li.breadcrumbs-item
                                    a(href=third.link ) #{third.title}
                                li.breadcrumbs-item= pageTitle
                            else
                                li.breadcrumbs-item= pageTitle

            block content

            if !noContacts
                include ../layout/contacts-inner
        include ../layout/footer

        script(src="scripts/libraries.min.js")
        script(src="scripts/scripts.js")
